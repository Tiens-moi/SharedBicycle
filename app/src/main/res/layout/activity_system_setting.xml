<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingjiao.sharedbicycle.SystemSetting"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_return"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="系统设置"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_introduce_product"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="产品介绍"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:background="#00000000"/>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="#e7e7e7"
       android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_suggest_send"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="意见反馈"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:background="#00000000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="修改密码"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:background="#00000000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_version_update"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="版本更新"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:background="#00000000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="关于我们"
        android:textSize="13sp"
        android:textColor="#333333"
        android:gravity="left"
        android:paddingLeft="12dp"
        android:paddingTop="17dp"
        android:background="#00000000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e7e7e7"
        android:layout_marginTop="5dp"/>


        <Button
            android:id="@+id/btn_login_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:background="@mipmap/btn_connect"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>


</LinearLayout>

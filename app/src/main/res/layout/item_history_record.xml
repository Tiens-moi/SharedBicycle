<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:src="@mipmap/search_icon_location"/>
    <TextView
        android:id="@+id/item_history_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image_location"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="莎乐美音乐空间"
        />

    <ImageView
        android:id="@+id/item_image_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_icon_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        />
    <ImageView
        android:layout_below="@id/item_image_add"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="35dp"
        android:background="#e7e7e7"/>
</RelativeLayout>